<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>

<table>
  <%# total_price = 0.0 %>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %> Ã—</td>
      <td><%= item.food.name %></td>
      <td class="item_price"><%= item.quantity %> * <%= item.food.price %> = <%= number_to_currency(items_price = item.total_price(item.quantity, item.food.price), unit: "Rp ", delimiter: ".", separator: ",") %></td>
      <!-- <td class="item_price"><%# number_to_currency(item.quantity * item.food.price, unit: "Rp ", delimiter: ".", separator: ",") %></td> -->
    </tr>
    <%# total_price += (item.quantity * item.food.price) %>
    <% Cart.total_price(items_price) %>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(Cart.price, unit: "Rp ", delimiter: ".", separator: ",") %></td>
    <% Cart.price = 0 %>
  </tr>
</table>