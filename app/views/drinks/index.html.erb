<p id="notice"><%= notice %></p>

<h1>Drinks</h1>

<table>
    <% @drinks.each do |drink| %>


      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(drink.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= drink.name %></dt>
            <dd><%= truncate(strip_tags(drink.description), length: 80) %></dd >
          </dl>
        </td>
        <td class="list_action">
          <%= link_to 'Show', drink %>
          <%= link_to 'Edit', edit_drink_path(drink) %>
          <%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

        <td>
          <div class="entry">

            <div class="price_line">
              <span class="price">
                <%= number_to_currency(drink.price, unit: "Rp ", delimiter: ".", separator: ",") %>
                <%= button_to 'Add to Cart', line_items_path(drink_id: drink) %>
              </span>
            </div>
          </div>
        </td>

      </tr>
    <% end %>
</table>

<br>

