<!DOCTYPE html>
<html>
  <head>
    <title>The Simplified Go Food Web App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag 'logo.jpg', alt: "Simplified Go Food" %>
      <span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">

        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Orders', orders_path %></li>
            <li><%= link_to 'Foods', foods_path %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li> </li>
            <li><%= button_to 'Logout', logout_path, method: :delete %></li>
          </ul>
          
        <% else %>
          <ul>
            <li><%= link_to 'Login', login_path %></li>
          </ul>
        <% end %>
        
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>
        </div>

        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="#">My Account</a></li>
          <li><a href="orders">My Order</a></li>
          <li><a href="/foods">Food List</a></li>
          <li><a href="/categories">Category</a></li>
          <li><a href="/tags">Tag</a></li>
          <li><a href="/vouchers">Voucher</a></li>
          <li><a href="/carts">Carts</a></li>
        </ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>