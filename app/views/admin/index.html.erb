<h1>Admin Index</h1>

<div style="display: block;">
  <table width="100%">
    <tr valign="top">
      <td width="33%">
        <div>
          <h4>Search Food</h5>
          <%= form_tag admin_path, :method => 'get' do %>
            <div>
              <label>name :</label>
              <%= text_field_tag :food_name, params[:food_name] %>
            </div>
            <div>
              <label>description :</label>
              <%= text_field_tag :description, params[:description] %>
            </div>
            <div>
              <label>minimum price :</label>
              <%= text_field_tag :minimum_price, params[:minimum_price] %>
            </div>
            <div>
              <label>maximum price :</label>
              <%= text_field_tag :maximum_price, params[:maximum_price] %>
            </div>
            <br>
            <%= button_tag "Search", :name => 'submit', :value => 'food' %>    
          <% end %>
        </div>
      </td>

      <td width="33%">
        <div>
          <h4>Search Order</h5>
          <%= form_tag admin_path, :method => 'get' do %>
            <div>
              <label>name :</label>
              <%= text_field_tag :order_name, params[:order_name] %>
            </div>
            <div>
              <label>address :</label>
              <%= text_field_tag :address, params[:address] %>
            </div>
            <div>
              <label>email :</label>
              <%= text_field_tag :email, params[:email] %>
            </div>
            <div>
              <label>payment type</label>
              <select name='payment_type'>
                <option value="">Choose payment type</option>>
                <option value="0">Cash</option>
                <option value="1">Go Pay</option>
                <option value="2">Credit</option>
              </select>
            </div>
            <div>
              <label>minimum total price :</label>
              <%= text_field_tag :minimum_total_price, params[:minimum_total_price] %>
            </div>
            <div>
              <label>maximum total price :</label>
              <%= text_field_tag :maximum_total_price, params[:maximum_total_price] %>
            </div>
            <br>
            <%= button_tag "Search", :name => 'submit', :value => 'order' %>    
          <% end %>
        </div>
      </td>

      <td width="33%">
        <div>
          <h4>Search Restaurant</h5>
          <%= form_tag admin_path, :method => 'get' do %>
            <div>
              <label>name :</label>
              <%= text_field_tag :restaurant_name, params[:restaurant_name] %>
            </div>
            <div>
              <label>address :</label>
              <%= text_field_tag :restaurant_address, params[:restaurant_address] %>
            </div>
            <div>
              <label>minimum food count :</label>
              <%= text_field_tag :minimum_food_count, params[:minimum_food_count] %>
            </div>
            <div>
              <label>maximum food count :</label>
              <%= text_field_tag :maximum_food_count, params[:maximum_food_count] %>
            </div>
            <br>
            <%= button_tag "Search", :name => 'submit', :value => 'restaurant' %>    
          <% end %>
        </div>
      </td>
    </tr>
  </table>
</div>


